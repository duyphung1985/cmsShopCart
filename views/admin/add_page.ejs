<%- include('../layouts/adminheader')%>

<h2 class="page-title">Add a Page</h2>
<a class="btn btn-primary" href="/admin/pages">Back to all</a>
<br><br>
<form action="/admin/pages/add-page" method="POST">
    <div class="form-group">
        <!-- Alert Error -->
    <% if(typeof errors != 'undefined'){ %>
        <% errors.forEach(function(err){%>
            <div class="alert"><%= err.msg %></div>
        <%})%>
    <%}%>
    </div>
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control"type="text" name="title" value="<%= title %>" placeholder="Title">
    </div>

    <div class="form-group">
        <label for="slug">Slug</label>
        <input class="form-control" type="text" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>

    <div class="form-group">
        <label for="title">Content</label>
        <textarea class="form-control" name="content" cols="30" rows="10"><%= content %></textarea>
    </div>

    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Submit">
    </div>

</form>

<%- include('../layouts/adminfooter')%>