<%- include('../layouts/adminheader')%>

<h2 class="page-title">Category</h2>
<a class="btn btn-primary" href="/admin/category/add-category">Add a new Category</a>
<br /><br />

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if(typeof category != 'undefined'){%> <% category.forEach(function(cat){%>
    <tr>
      <td><%= cat.title %></td>
      <td><a href="/admin/category/edit-category/<%= cat.slug %>">Edit</a></td>
      <td>
        <% if(cat.slug !== 'home'){%>
        <a href="/admin/category/delete-category/<%= cat._id %>">Delete</a>
        <%}%>
      </td>
    </tr>
    <%})%> <%}%>
  </tbody>
</table>

<%- include('../layouts/adminfooter')%>
