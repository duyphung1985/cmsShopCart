<%- include('../layouts/adminheader')%>

<h2 class="page-title">Pages</h2>
<a class="btn btn-primary" href="/admin/pages/add-page">Add a new page</a>
<br /><br />

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if(typeof page != 'undefined'){%> <% page.forEach(function(p){%>
    <tr>
      <td><%= p.title %></td>
      <td><a href="/admin/pages/edit-page/<%= p.slug %>">Edit</a></td>
      <td>
        <% if(p.slug !== 'home'){%>
        <a onclick="return confirm('Bạn có chắc chắn muốn xóa không?')" href="/admin/pages/delete-page/<%= p._id %>">Delete</a>
        <%}%>
      </td>
    </tr>
    <%})%> <%}%>
  </tbody>
</table>

<%- include('../layouts/adminfooter')%>
